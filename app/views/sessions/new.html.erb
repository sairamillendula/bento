<%= page_title("#{t 'sessions.new'}") %>

<div class="row-fluid">
  <div class="span6">
    <%= simple_form_for(:session, url: sessions_path, method: :post, html: {class: "form-horizontal"}) do |f| %>
	    <%= f.error_notification %>
	  
	    <%= f.input :email %>
	    <%= f.input :password %>

	    <p id="remember-control" class="nolabel">
        <%= check_box_tag :remember_me %> <%= t 'remember_me' %>
	    </p>

	    <p><%= f.button :submit, "#{t 'sessions.submit'}", class: "nolabel btn", style: 'margin-top:10px;' %></p>
   <% end %> 
	  <p class="nolabel" style="margin-top:20px;"><i><%= link_to "#{t 'passwords.forgot'}", new_password_path %></i></p>
  </div>

  <div class="span6">
    <p style="margin-top:0;"><%= t 'registrations.no_account_yet' %></p>
		<%= link_to "Sign up", signup_path, class: 'btn' %>
  </div>
</div>