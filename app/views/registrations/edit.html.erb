<div class="authentication">
	<h1><%= t 'registrations.edit.title' %></h1>

  <%= simple_form_for(@user, url: update_profile_path, method: :post, html: {class: 'form-horizontal'}) do |f| %>
	  <%= f.error_notification %>

	  <%= f.input :email %>
	  <%= f.input :first_name %>
	  <%= f.input :last_name %>
	  <%= f.input :password, hint: false %>

	  <%= f.button :submit, "Update Profile", class: "btn btn-primary nolabel" %>
	<% end %>
</div>