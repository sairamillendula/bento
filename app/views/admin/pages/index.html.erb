<%= page_title("#{t 'pages.title'}") do %>
  <%= icon_button_link_to "#{t 'pages.new'}", new_admin_page_path, level: 'primary', icon: 'plus', white: true, class: "fr" %>
<% end %>

<% if @pages.present? %>
  <table id="pages" class="table table-striped">
    <tr>
      <th style="min-width:200px;"><%= "#{t 'name', default: 'Name'}" %></th>
      <th>Slug</th>
      <th><%= "#{t 'content'}" %></th>
      <th style="min-width:80px;"></th>
    </tr>
    
    <% @pages.each do |page| %>
      <tr>
        <td><%= link_to page.name, admin_page_path(page) %> <%= status_tag "#{t 'private'}" if !page.visible? %></td>
        <td><%= page.slug %></td>
        <td><%= truncate(page.content, length: 200) %></td>
        <td><%= icon_button_link_to "#{t 'edit'}", edit_admin_page_path(page), icon: 'pencil', size: 'small' %></td>
      </tr>
    <% end %>
  </table>

<% else %>
  <div class="alert"><%= t 'pages.none' %>.</div>
<% end %>