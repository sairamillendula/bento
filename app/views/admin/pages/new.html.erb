<%= page_title("#{t 'pages.new'}") do %>
  <span id='md_link' class='fr'><a href="#mdModal" role="button" class="btn" data-toggle="modal">Markdown</a></span>
<% end %>

<%= render 'form' %>

<script type="text/javascript">
  $('#page_name').one('change', function() {
    $('#page_slug').val($(this).val().replace(/\s+/g, '-').toLowerCase());
  });
</script>