<%= page_title("#{t 'categories.edit'}") do %>
  <%= icon_button_link_to "#{t 'destroy'}", admin_category_path(@category), method: :delete, data: {confirm: "#{t 'are_you_sure'}"}, level: 'danger', icon: 'remove', white: true, class: "fr" %>
<% end %>

<%= simple_form_for([:admin, @category], html: {class: 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= subsection_title('SEO') %>
    <%= render 'admin/meta_tags/form', f: f %>
  </div>

  <div class="form-actions">
    <%= submit_or_cancel(f) %>
  </div>
<% end %>