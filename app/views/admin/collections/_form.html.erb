<%= simple_form_for([:admin, @collection], html: {class: 'form-horizontal zen-form'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, input_html: {class: 'span12'}, placeholder: "Summer collection, Under $50, Staff picks..." %>
    <%= f.input :slug, input_html: {class: 'span12'} %>
    <%= f.input :visible, as: :radio_buttons, item_wrapper_class: 'inline' %>
    <%= f.input :description %>

    <%= subsection_title("SEO") %>
    <%= render 'admin/meta_tags/form', f: f %>
  </div>
  <div class="form-actions">
    <%= submit_or_cancel(f) %>
  </div>
<% end %>