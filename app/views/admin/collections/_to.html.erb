<% if @collection.products.any? %>
  <% @collection.products.order('position').each do |product| %>
    <%= content_tag_for :li, product do %>
      <%= product.name %> <span class="remove fr">  <%= icon_link_to "", remove_products_admin_collection_path(@collection, product_id: product.id), method: :post, remote: true, icon: 'remove' %></span>
    <% end %>
  <% end %>
<% else %>
 <p class="alert">Add Products to the collection.<br>
  Products can be re-ordered by dragging and dropping.</p>
 </p>
<% end %>