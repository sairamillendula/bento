<%= simple_form_for([:admin, @coupon], html: {class: 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :code %>
    <%= f.input :active, as: :radio_buttons, item_wrapper_class: 'inline' %>
    <%= f.input :amount %>
    <%= f.input :percentage, as: :radio_buttons, item_wrapper_class: 'inline' %>
  </div>

  <div class="form-actions">
    <%= submit_or_cancel(f) %>
  </div>
<% end %>


