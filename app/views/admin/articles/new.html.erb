<%= page_title("#{t 'articles.new'}") do %>
  <span id='md_link' class='fr'><a href="#mdModal" role="button" class="btn" data-toggle="modal">Markdown</a></span>
<% end %>

<%= render 'form' %>

<script type="text/javascript">
  $('#article_title').one('change', function() {
    $('#article_slug').val($(this).val().replace(/\s+/g, '-').toLowerCase());
  });
</script>