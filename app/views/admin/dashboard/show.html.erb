<%= page_title("#{t 'dashboard'}") %>

<div class="row-fluid stats-row">
  <h3><%= t 'users.title' %></h3>
  <div class="span3">
    <h4>Aujourd'hui: <b><%= @today_users %></b></h4>
  </div>
  <div class="span3">
    <h4>Semaine: <b><%= @weekly_users %></b></h4>
  </div>
  <div class="span3">
    <h4>Mois: <b><%= @monthly_users %></b></h4>
  </div>
  <div class="span3">
    <h4>Total: <b><%= @users.length %></b></h4>
  </div>
</div>

<div class="row-fluid stats-row">
  <h3><%= t 'orders.title' %></h3>
  <div class="span3">
    <h4>Aujourd'hui: <b><%#= @today_orders %></b></h4>
  </div>
  <div class="span3">
    <h4>Semaine: <b><%#= @weekly_orders %></b></h4>
  </div>
  <div class="span3">
    <h4>Mois: <b><%#= @monthly_orders %></b></h4>
  </div>
  <div class="span3">
    <h4>Total: <b><%#= @orders.length %></b></h4>
  </div>
</div>

<%= link_to image_tag('connect-button-blue.png', size: "190x33"), "https://connect.stripe.com/oauth/authorize?response_type=code&scope=read_write&stripe_landing=login&client_id=#{ENV['STRIPE_CONNECT_CLIENT_ID']}" %>