<%= content_tag_for :tr, user do %>
  <td><%= user.full_name %></td>
  <td><%= user.email %></td>
  <td><%= icon_button_link_to "#{user.active? ? t('deactivate') : t('activate')}", toggle_status_admin_user_path(user), method: :post, remote: true, level: "#{user.active? ? 'danger' : 'primary'}", size: 'small', icon: "#{user.active? ? 'remove' : 'play'}", white: true %>
  </td>
<% end %>