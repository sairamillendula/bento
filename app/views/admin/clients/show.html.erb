<%= page_title(@client.full_name) %>

<% if @client.orders.any? %>
  <h4 style="padding-top:20px; clear:both;"><%= t 'orders' %></h4>

  <table class="table table-striped">
    <tr>
      <th>#</th>
      <th><%= t 'statut' %></th>
      <th>Date</th>
      <th><%= t 'price' %></th>
      <th></th>
    </tr>
    
    <% @client.orders.order('created_at DESC').each do |order| %>
      <tr>
      	<td><%= order.code %></td>
      	<td><%= status(order.state) %></td>
        <td><%= l order.created_at %></td>
        <td><%= number_to_currency(order.total, strip_insignificant_zeros: true) %></td>
        <td><%= icon_button_link_to "#{t 'view'}", admin_order_path(order), icon: 'file' %></td>
      </tr>
    <% end %>
  </table>
<% else %>
  <div class="alert"><%= t 'orders.none' %>.</div>
<% end %>