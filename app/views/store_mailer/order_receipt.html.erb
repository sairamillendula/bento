<%= content_for :email_body do %>
  <h3><%= "#{t 'order'}" %> #<%= @order.code %></h3>
  <p><%= l @order.created_at, format: :long %></p>
  
  <h4><%= t 'billing_address' %></h4>
  <address><%= @order.shipping_address.display_name %></address>

  <h4><%= t 'shipping_address' %></h4>
  <address><%= @order.shipping_address.display_name %></address>
  
  <%= render 'orders/items' %>
<% end %>